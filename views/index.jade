extends layout

block content
  #app-container
    .user-list(ng-controller="UserList")
      h2 Users
      ul
        li(ng-repeat="user in users")
          .name {{user}}
          .actions
            button.btn(ng-click='deleteUser(user)') Delete

      form.form-inline(ng-submit='addUser()')
        input(type='text', ng-model="name")
        input.btn-primary(type="submit", value="Add")

